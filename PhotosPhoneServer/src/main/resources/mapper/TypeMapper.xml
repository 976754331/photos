<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hoperun.mapper.TypeMapper">
  <!-- 查询一级分类 -->
  <select id="selectFirstType" resultType="map">
    SELECT type_id,type_name FROM tb_pic_type WHERE parent_id is null
  </select>
  
  <!-- 查询二级分类 -->
  <select id="selectSecondType" parameterType="map" resultType="map">
    SELECT type_id,type_name FROM tb_pic_type WHERE parent_id = #{parentId}
  </select>
  
</mapper>